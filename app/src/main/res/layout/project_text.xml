<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    >

    <!--parent top-top of relative layout, start to the left...-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="ID"
        android:id="@+id/projid"
        android:ellipsize="marquee"
        android:visibility="invisible"
        android:maxLines="1"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_work_black_24dp"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="0%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/projpercent"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/projid"
        android:layout_alignBottom="@+id/projtitle" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Title"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:id="@+id/projtitle"

        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_width="180dp" />


</RelativeLayout>
