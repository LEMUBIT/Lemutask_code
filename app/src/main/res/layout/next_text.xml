<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <!--parent top-top of relative layout, start to the left...-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="ID"
        android:id="@+id/txtid"
        android:ellipsize="marquee"
        android:visibility="invisible"
        android:maxLines="1"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/txtTitleop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/todochk1"
        android:ellipsize="end"
        android:maxLines="1"

        android:text="Note title"


        android:textColor="@color/colorAccent1"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_alignStart="@+id/textView4" />


    <!--make checkbox focusable=false to enable context menu be seen-->

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todochk1"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:contextClickable="false"
        android:focusable="false"
        android:layout_marginStart="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Due Time"
        android:text=""
        android:textColor="@color/colortext"
        android:textSize="12sp"
        android:layout_below="@+id/txtTitleop"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="End time"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="@color/colortext"
        android:textSize="12sp"
        android:layout_below="@+id/txtTitleop"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="-"
        android:textSize="15sp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/txtTitleop"
        android:layout_toStartOf="@+id/textView10"
        android:layout_alignBottom="@+id/textView10" />

    <TextView
        android:id="@+id/task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_below="@+id/txtTitleop"
        android:paddingLeft="10dp"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/textView10"
        android:text="TextView" />

</RelativeLayout>
