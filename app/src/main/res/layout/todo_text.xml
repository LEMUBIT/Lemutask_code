<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <!--parent top-top of relative layout, start to the left...-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="ID"
        android:id="@+id/txtid"
        android:ellipsize="marquee"
        android:visibility="invisible"
        android:maxLines="1"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateop"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/txtid"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Note title"
        android:textSize="13sp"
        android:id="@+id/txtTitleop"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"


        android:textStyle="normal|bold|italic"
        android:layout_alignBottom="@+id/txtid"
        android:layout_toEndOf="@+id/todochk1"
        android:layout_marginStart="8dp" />

    <TextView
        android:text="-"
        android:textSize="15sp"
android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/txtTitleop"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:text=""
        android:hint="Due Time"
        android:textSize="13sp"

android:textColor="@color/colortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/txtTitleop"
        android:layout_marginStart="7dp" />

    <TextView
        android:text=""
        android:hint="End time"
        android:paddingLeft="10dp"
        android:textSize="13sp"
        android:textColor="@color/colortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />




    <!--make checkbox focusable=false to enable context menu be seen-->

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todochk1"


        android:contextClickable="false"
        android:focusable="false"
        android:layout_alignBaseline="@+id/dateop"
        android:layout_alignBottom="@+id/dateop"
        android:layout_alignParentStart="true" />

</RelativeLayout>
