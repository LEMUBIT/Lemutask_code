
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="lemuel.charles.charl.lemutask.HomeFragment">


    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"

        android:fontFamily="sans-serif"
        android:paddingBottom="2dp"
        android:text="Today"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/today_tsk"
        android:layout_alignEnd="@+id/today_tsk" />

    <TextView
        android:id="@+id/textView2"
        android:text="Tomorrow"
        android:textAlignment="center"
        android:textSize="15sp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:layout_above="@+id/tommorow_tsk"
        android:layout_alignStart="@+id/due_hw_tx"
        android:layout_alignEnd="@+id/due_hw_tx" />

    <Button
        android:text="55 TASKS"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent1"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:background="@drawable/home_status_frame_none"
        android:id="@+id/tommorow_tsk"

        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"


        android:layout_alignBaseline="@+id/today_tsk"
        android:layout_alignBottom="@+id/today_tsk"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:text="55 TASKS"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent1"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:background="@drawable/home_status_frame_none"
        android:id="@+id/today_tsk"

        android:fontFamily="sans-serif"
        android:elevation="0dp"
        android:textStyle="normal|bold"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <Button
        android:text="55 UNDONE"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent3"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:elevation="0dp"

        android:textStyle="normal|bold"
        android:layout_height="wrap_content"
        android:background="@drawable/home_status_frame_none"
        android:id="@+id/due_hw_btn"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="114dp"
        android:layout_below="@+id/tommorow_tsk"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:text="Assignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/due_hw_tx"
        android:paddingBottom="2dp"
        android:layout_above="@+id/project_btn"
        android:layout_alignStart="@+id/due_hw_btn" />

    <TextView
        android:text="Projects"
        android:paddingBottom="2dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginBottom="5dp"
        android:layout_alignBaseline="@+id/due_hw_tx"
        android:layout_alignBottom="@+id/due_hw_tx"
        android:layout_alignStart="@+id/project_btn"
        android:layout_alignEnd="@+id/project_btn" />

    <Button
        android:id="@+id/project_btn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/home_status_frame_none"

        android:elevation="0dp"
        android:fontFamily="sans-serif"
        android:text="55 UNDONE"
        android:textColor="@color/textAccent"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/due_hw_btn"
        android:layout_alignBottom="@+id/due_hw_btn"
        android:layout_alignStart="@+id/today_tsk"
        android:layout_alignEnd="@+id/today_tsk" />

</RelativeLayout>
