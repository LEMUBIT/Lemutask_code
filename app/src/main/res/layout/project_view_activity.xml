<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_view_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lemuel.charles.charl.lemutask.Project.ProjectView">

    <TextView
        android:text="Detail"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pvtitle"
        android:layout_alignParentStart="true"
        android:id="@+id/pvdetail" />

    <TextView
        android:text="Title"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/pvtitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pvdetail"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:id="@+id/tvdeadline"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvdeadline"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
android:max="100"
        android:id="@+id/pvseekbar" />

    <TextView
        android:text="0% complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvnotify"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pvseekbar"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="No team role"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnotify"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/pvrole" />

    <TextView
        android:text="No team task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/pvrole"
        android:layout_alignParentStart="true"
        android:id="@+id/pvtask" />


</RelativeLayout>
