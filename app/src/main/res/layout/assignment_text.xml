<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    >

    <!--parent top-top of relative layout, start to the left...-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="ID"
        android:id="@+id/homworkid"
        android:ellipsize="marquee"
        android:visibility="invisible"
        android:maxLines="1"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="id"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/homeworktitle"
        android:layout_marginStart="11dp"
        android:id="@+id/class_id" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/homework_checkBox"
        android:focusable="false" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:id="@+id/homeworktitle"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="normal|bold|italic"
        android:layout_alignBaseline="@+id/homework_checkBox"
        android:layout_alignBottom="@+id/homework_checkBox"
        android:layout_toEndOf="@+id/homework_checkBox"
        android:layout_marginStart="22dp" />


</RelativeLayout>
